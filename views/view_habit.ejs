        </div>

        <!-- right partition -->
      </div>

      <!-- habit list by category -->
      <div class="habits_list_by_status flex_item_center">
        <% for (let habit_index = 0; habit_index < habits_track_for_today.length; habit_index++ ) { %>
          
          <% if (habits_track_for_today[habit_index].status === 'IN_PROGRESS') { %>
          <li class = "habit_card">

            <!-- card image of item -->
              <img class = "habit_image" src=<%= habits_track_for_today[habit_index].habit.avatar %> alt=<%= habits_track_for_today[habit_index].habit.name %> height="100" width="100">
              
              <!-- habit name -->
