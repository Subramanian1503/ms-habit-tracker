                <div class="dropdown">
                  <button class="dropbtn">IN_PRO</button>
                  <div class="dropdown-content">
                    <a href="/habit-track/update/<%= habits_track_for_today[habit_index]._id %>?update_status=TO_DO">TODO</a>
                    <a href="/habit-track/update/<%= habits_track_for_today[habit_index]._id %>?update_status=DONE">DONE</a>
                    <a href="/habit-track/update/<%= habits_track_for_today[habit_index]._id %>?update_status=NOT_FOR_TODAY">NOT_FOR_TODAY</a>
                  </div>
                </div>
              </div>
            
          </li>
         
          <% } %>
         
          <% } %>
      </div>
    </section>

    <!-- habits done for today section -->
    <section class="habit_view_column ">
      <!-- habit view heading -->
      <div class="habit_list_heading flex_row_arrange_even">
